<Window x:Class="Chat.Client.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Socket - WPF" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header (login) -->
            <RowDefinition Height="Auto"/>
            <!-- Target -->
            <RowDefinition Height="*"/>
            <!-- Messages -->
            <RowDefinition Height="Auto"/>
            <!-- Input -->
            <RowDefinition Height="Auto"/>
            <!-- Progress -->
        </Grid.RowDefinitions>

        <!-- Header / Login -->
        <DockPanel Grid.Row="0" Margin="8" LastChildFill="False">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" Margin="0,0,8,0" >
                <TextBlock Text="Host:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <TextBox x:Name="TxtHost" Width="140" Text="127.0.0.1" Margin="0,0,8,0"/>
                <TextBlock Text="Port:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <TextBox x:Name="TxtPort" Width="70" Text="5000" Margin="0,0,8,0"/>
                <TextBlock Text="User:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <TextBox x:Name="TxtUser" Width="120" Margin="0,0,8,0"/>
            </StackPanel>
            <Button x:Name="BtnConnect" Content="Conectar" Width="100" Click="BtnConnect_Click"/>
            <Button x:Name="BtnUsers" Content="Listar usuários" Width="120" Margin="8,0,0,0" Click="BtnUsers_Click"/>
        </DockPanel>

        <!-- Target (usuário ou grupo) -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="8">
            <TextBlock Text="Destino:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <ComboBox x:Name="CmbTargetType" Width="100" SelectedIndex="0">
                <ComboBoxItem Content="User"/>
                <ComboBoxItem Content="Group"/>
            </ComboBox>
            <TextBox x:Name="TxtTarget" Width="200" Margin="8,0,0,0"/>
            <Button x:Name="BtnCreateGroup" Content="Criar grupo" Width="110" Margin="8,0,0,0" Click="BtnCreateGroup_Click"/>
            <Button x:Name="BtnAddToGroup" Content="Add ao grupo" Width="110" Margin="8,0,0,0" Click="BtnAddToGroup_Click"/>
        </StackPanel>

        <!-- Messages -->
        <ListBox Grid.Row="2" x:Name="LstMessages" Margin="8" ItemsSource="{Binding Messages}"/>

        <!-- Input row -->
        <DockPanel Grid.Row="3" Margin="8" LastChildFill="True">
            <Button x:Name="BtnAttach" Content="📎 Arquivo" Width="100" DockPanel.Dock="Left" Click="BtnAttach_Click"/>
            <TextBox x:Name="TxtInput" Margin="8,0,8,0" Height="36" VerticalContentAlignment="Center" Width="645"/>
            <Button x:Name="BtnSend" Content="Enviar" Width="100" Click="BtnSend_Click"/>
        </DockPanel>

        <!-- Progress -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="8">
            <TextBlock Text="Progresso:" VerticalAlignment="Center"/>
            <ProgressBar x:Name="Prg" Height="16" Width="240" Margin="8,0,0,0"/>
            <TextBlock x:Name="LblPrg" Text="0%" Margin="8,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
